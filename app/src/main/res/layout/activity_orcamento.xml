<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2B1F57"
    app:layout_constrainedHeight="true"

    tools:context="com.AdrianoDev.ADS_Ecommerce.OrÃ§amento">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="323dp"
        android:layout_height="513dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView

        android:id="@+id/comprador"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/masone"
        android:text="TextView"
        android:textColor="@color/grena"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/hora"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/hora"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="486dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/masone"
        android:text="TextView"
        android:textColor="@color/grena"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/data"
        android:layout_width="73dp"
        android:layout_height="24dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/masone"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/grena"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/valorfinal"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/voltar7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voltar" />

    <TextView
        android:id="@+id/valorfinal"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="440dp"
        android:fontFamily="@font/masone"
        android:maxLength="6"
        android:scaleType="fitCenter"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/grena"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/foto"
        app:civ_border_color="@color/grena"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

</androidx.constraintlayout.widget.ConstraintLayout>