<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_777"
    tools:context="com.AdrianoDev.ADS_Ecommerce.CupomDeCompra">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="325dp"
        android:layout_height="400dp"
        android:layout_marginBottom="269dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cupomdecompras" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="325dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotodeperfil"
        android:layout_width="80dp"
        android:layout_height="78dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="237dp"
        android:layout_marginBottom="110dp"
        android:adjustViewBounds="false"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/foto"
        app:civ_border_color="@color/grena"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />


    <TextView

        android:id="@+id/comprador"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="443dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/masone"
        android:text="TextView"
        android:textColor="@color/grena"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/hora"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_marginStart="277dp"
        android:layout_marginBottom="443dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/masone"
        android:text="TextView"
        android:textColor="@color/grena"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/data"
        android:layout_width="73dp"
        android:layout_height="24dp"
        android:layout_marginStart="272dp"
        android:layout_marginBottom="488dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/masone"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/grena"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/voltar7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voltar" />



    <TextView
        android:id="@+id/valorfinal"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/masone"
        android:maxLength="8"
        android:scaleType="fitCenter"
        android:text="TextView"
        android:textColor="@color/grena"
        android:textSize="37sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageButton
        android:id="@+id/enviar"
        android:layout_width="140dp"
        android:layout_height="63dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/Comprar"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView23"
        app:srcCompat="@drawable/enviar" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="49dp"
        android:layout_height="41dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="20dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/grena"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="19dp"
        android:text="R$"
        android:textColor="@color/grena"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/valorfinal" />



</androidx.constraintlayout.widget.ConstraintLayout>